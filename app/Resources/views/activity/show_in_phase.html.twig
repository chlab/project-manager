<table class="table table-striped table-hover table-condensed">
    <thead>
        <tr>
            <th>Aktivität</th>
            <th>Start</th>
            <th>Ende</th>
        </tr>
    </thead>
    <tbody>
        {% for activity in phase.activities %}
            <tr>
                <td>
                    <a href="{{ path('activity_show', { 'id': activity.id, 'project_id': project.id }) }}">{{ activity.name }}</a>
                </td>
                <td>{% if activity.startDate %}{{ activity.startDate|date }}{% endif %}</td>
                <td>{% if activity.endDate %}{{ activity.endDate|date }}{% endif %}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
<a class="btn btn-default btn-sm" href="{{ path('activity_new', { 'phase_id': phase.id, 'project_id': project.id }) }}">Aktivität hinzufügen</a>