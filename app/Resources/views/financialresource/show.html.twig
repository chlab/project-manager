<div class="panel panel-default panel-spacing-top">
    <div class="panel-heading">
        <div class="panel-title">Finanzielle Ressourcen</div>
    </div>
    <div class="panel-body">

        <table class="table table-striped table-hover table-condensed">
            <thead>
                <tr>
                    <th>Kostenart</th>
                    <th>Kosten geplant</th>
                    <th>Kosten effektiv</th>
                </tr>
            </thead>
            <tbody>
            {% for resource in activity.financialResources %}
                <tr>
                    <td>{{ resource.costType.name }}</td>
                    <td>{{ resource.plannedCost|localizedcurrency(default_currency) }}</td>
                    <td>{{ resource.actualCost|localizedcurrency(default_currency) }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <ul class="list-inline">
            <li>
                <a class="btn btn-default btn-sm" href="{{ path('activity_hr_new', { 'activity_id': activity.id }) }}">
                    Personelle Ressourcen hinzuf√ºgen
                </a>
            </li>
        </ul>

    </div>
</div>
