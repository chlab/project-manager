{% extends 'base.html.twig' %}

{% block body %}
    <h1>Project list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Istemplate</th>
                <th>Title</th>
                <th>Created</th>
                <th>Modified</th>
                <th>Deleted</th>
                <th>Permissiondate</th>
                <th>Priority</th>
                <th>State</th>
                <th>Startdate</th>
                <th>Enddate</th>
                <th>Actualstartdate</th>
                <th>Actualenddate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td><a href="{{ path('project_show', { 'id': project.id }) }}">{{ project.id }}</a></td>
                <td>{% if project.istemplate %}Yes{% else %}No{% endif %}</td>
                <td>{{ project.title }}</td>
                <td>{% if project.created %}{{ project.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if project.modified %}{{ project.modified|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if project.deleted %}{{ project.deleted|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if project.permissiondate %}{{ project.permissiondate|date('Y-m-d') }}{% endif %}</td>
                <td>{% if project.priority %}Yes{% else %}No{% endif %}</td>
                <td>{% if project.state %}Yes{% else %}No{% endif %}</td>
                <td>{% if project.startdate %}{{ project.startdate|date('Y-m-d') }}{% endif %}</td>
                <td>{% if project.enddate %}{{ project.enddate|date('Y-m-d') }}{% endif %}</td>
                <td>{% if project.actualstartdate %}{{ project.actualstartdate|date('Y-m-d') }}{% endif %}</td>
                <td>{% if project.actualenddate %}{{ project.actualenddate|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('project_show', { 'id': project.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('project_edit', { 'id': project.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="list-inline">
        <li>
            <a href="{{ path('project_new') }}" class="btn btn-primary">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
