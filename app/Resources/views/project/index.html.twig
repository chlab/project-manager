{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Projekte</h1>

        <div class="row" id="project-list">

            {% for project in projects %}
                
                <div class="col-md-4">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <a href="{{ path('project_show', { 'id': project.id }) }}">{{ project.title }}</a>
                        </div>
                        <div class="panel-body">
                            <!-- progress -->
                            <div class="progress">
                                <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="{{ project.completionPercentage }}" aria-valuemin="0" aria-valuemax="100" style="width: {{ project.completionPercentage }}%">
                                    <span class="sr-only">{{ project.completionPercentage }}%</span>
                                  </div>
                            </div>

                            <!-- facts -->
                            <ul class="list-group">
                                <li class="list-group-item">
                                    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                                    {{ project.projectManager.fullName }}
                                </li>
                                <li class="list-group-item">
                                    <span class="glyphicon glyphicon-signal" aria-hidden="true"></span>
                                    {{ project.getStateText }}
                                </li>
                                <li class="list-group-item">
                                    <span class="glyphicon glyphicon-time" aria-hidden="true"></span>
                                    {{ project.getRemainingDays }} Tage bis Abschluss
                                </li>
                                <li class="list-group-item">
                                    <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                                    {{ project.getNrOfActivites }} Aktivit√§ten
                                </li>
                            </ul>

                        </div>
                    </div>
                </div>

            {% endfor %}

        </div>
    </div>

{% endblock %}
