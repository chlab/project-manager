{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ project.title }}</h1>

    <div class="progress">
        <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
            <span class="sr-only">20% Complete</span>
          </div>
    </div>

    <table class="table">
        <tbody>
            
            {# <tr>
                <th>Created</th>
                <td>{% if project.created %}{{ project.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Modified</th>
                <td>{% if project.modified %}{{ project.modified|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr> #}
            <tr>
                <th>Permissiondate</th>
                <td>{% if project.permissiondate %}{{ project.permissiondate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Priority</th>
                <td>{% if project.priority %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{% if project.state %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Startdate</th>
                <td>{% if project.startdate %}{{ project.startdate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Enddate</th>
                <td>{% if project.enddate %}{{ project.enddate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Actualstartdate</th>
                <td>{% if project.actualstartdate %}{{ project.actualstartdate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Actualenddate</th>
                <td>{% if project.actualenddate %}{{ project.actualenddate|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul class="list-inline">
        <li>
            <a href="{{ path('project_index') }}" class="btn btn-default">Back</a>
        </li>
        <li>
            <a href="{{ path('project_edit', { 'id': project.id }) }}" class="btn btn-default">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
