<div class="panel panel-default panel-spacing-top">
    <div class="panel-heading">
        <div class="panel-title">Personelle Ressourcen</div>
    </div>
    <div class="panel-body">

        <table class="table table-striped table-hover table-condensed">
            <thead>
                <tr>
                    <th>Rolle</th>
                    <th>Mitarbeiter</th>
                    <th>Stunden</th>
                </tr>
            </thead>
            <tbody>
            {% for resource in activity.humanResources %}
                <tr>
                    <td>{{ resource.role.name }}</td>
                    <td>{{ resource.employee.fullName }}</td>
                    <td>{{ resource.hours }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <ul class="list-inline">
            <li>
                <a class="btn btn-default btn-sm" href="{{ path('activity_hr_new', { 'activity_id': activity.id }) }}">
                    Personelle Ressourcen hinzuf√ºgen
                </a>
            </li>
        </ul>

    </div>
</div>