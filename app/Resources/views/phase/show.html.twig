<div class="panel panel-default panel-spacing-top">
    <div class="panel-heading">
        <div class="panel-title">{{ phase.name }}</div>
    </div>
    <div class="panel-body">
       
            <div class="row">
                <div class="col-md-4">
                    <table class="table">
                        <tbody>
                            <tr>
                                <td>Freigabe</td>
                                <td>{{ phase.clearanceDate is empty ? '' : phase.clearanceDate|date }}</td>
                            </tr>
                            <tr>
                                <td>Geplanter Start</td>
                                <td>{{ phase.startDate is empty ? '' : phase.startDate|date }}</td>
                            </tr>
                            <tr>
                                <td>Geplanter Abschluss</td>
                                <td>{{ phase.endDate is empty ? '' : phase.endDate|date }}</td>
                            </tr>
                            <tr>
                                <td>Effektiver Start</td>
                                <td>{{ phase.actualStartDate is empty ? '' : phase.actualStartDate|date }}</td>
                            </tr>
                            <tr>
                                <td>Effektiver Abschluss</td>
                                <td>{{ phase.actualEndDate is empty ? '' : phase.actualEndDate|date }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-md-8">
                    {% include 'activity/show_in_phase.html.twig' %}
                    {% include 'milestone/show_in_phase.html.twig' %}
                    <ul class="list-inline">
                        <li>
                            <a class="btn btn-default btn-sm" href="{{ path('activity_new', { 'phase_id': phase.id, 'project_id': project.id }) }}">Aktivität hinzufügen</a>
                        </li>
                        <li>
                            <a class="btn btn-default btn-sm" href="{{ path('milestone_new', { 'phase_id': phase.id, 'project_id': project.id }) }}">Meilenstein definieren</a>
                        </li>
                    </ul>
                </div>
            </div>
    </div>
</div>
